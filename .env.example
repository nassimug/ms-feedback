# ========================================
# APPLICATION CONFIGURATION
# ========================================
SERVER_PORT=8091

# ========================================
# MYSQL CONFIGURATION
# ========================================
MYSQL_ROOT_PASSWORD=your_mysql_password
MYSQL_DATABASE=testdb
MYSQL_USERNAME=root
MYSQL_PORT=3306

# ========================================
# PHPMYADMIN CONFIGURATION
# ========================================
PHPMYADMIN_PORT=8081

# ========================================
# MINIO CONFIGURATION (if used)
# ========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ========================================
# JPA/HIBERNATE CONFIGURATION
# ========================================
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_USE_SQL_COMMENTS=false

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_JDBC=DEBUG
LOG_LEVEL_HIBERNATE_SQL=DEBUG
LOG_LEVEL_HIBERNATE_BINDER=TRACE

# ========================================
# ACTUATOR CONFIGURATION
# ========================================
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=always

# ========================================
# EXTERNAL SERVICES
# ========================================
PERSISTANCE_SERVICE_URL=http://ms-persistance:8090
RECOMMENDATION_SERVICE_URL=http://ms-recommendation:8092

# ========================================
# DOCKER REGISTRY (for DockerHub push)
# ========================================
DOCKER_REGISTRY_USERNAME=your_dockerhub_username

